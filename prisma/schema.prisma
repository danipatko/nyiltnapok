// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
    admin 
    guest
}

model User {
    id                  Int         @id @unique @default(autoincrement())

    // essential data
    role                UserRole    @default(guest)
    email               String      @unique
    fullname            String
    
    // meta
    createdAt           DateTime    @default(now())
    lastLogin           DateTime    @default(now())
    lastNotification    DateTime

    // for guests
    groupId             Int? 
    joinedGroup         Group?      @relation("guestRelation", fields: [groupId], references: [id], onUpdate: Cascade, onDelete: SetNull)

    // for admins
    createdAppointments Appointment[]
    createdGroups       Group[]
}

model Appointment {
    id          Int         @id @unique @default(autoincrement())

    label       String

    creatorId   Int
    createdBy   User        @relation(fields: [creatorId], references: [id], onDelete: Cascade)
    createdAt   DateTime    @default(now())

    groups      Group[]
}

model Group {
    id              Int         @id @unique @default(autoincrement())

    appointmentId   Int
    appointment     Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
    
    maxMemberCount  Int
    
    creatorId       Int
    createdBy       User        @relation(fields: [creatorId], references: [id], onDelete: Cascade) 
    createdAt       DateTime    @default(now())

    members         User[]      @relation("guestRelation")
}
